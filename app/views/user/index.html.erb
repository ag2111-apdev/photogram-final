<body>
  <h1>List of users</h1>

  <table border="1">
    <tr>
      <th>
        Username
      </th>

      <th>
        Private?
      </th>

      <th></th>
      <th></th>
    </tr>

    <% @list_of_user.each do |a_user| %>
      <tr>
        <td>
          <%= a_user.username %>
        </td>

        <td>
          <% if a_user.private==true %>
            <%= p "Yes"%>
          <% else%>
            <%= p "No"%>
          <% end %>
        </td>
        
        <td>
          <%if session[:user_id]==nil%>
          <%else%>
            <form action="/insert_follow_request" method="post">
              <button>Follow</button>
            </form>
          <%end%>
        </td>
        <td>
          <a href="/users/<%= a_user.username %>">Show details</a>
        </td>
      </tr>
    <%end%>
  </table>

</body>